<resources>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_theme_color</item>
        <item name="colorPrimaryDark">@color/black_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/blue_theme_color</item>
        <item name="android:windowBackground">@color/dull_white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_theme_color</item>
        <item name="colorPrimaryDark">@color/black_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/blue_theme_color</item>
        <item name="android:textSize">@dimen/text_20_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/dull_white</item>
